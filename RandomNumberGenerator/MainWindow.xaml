<Window x:Class="RandomNumberGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomNumberGenerator"
        mc:Ignorable="d"
        Title="RandomGeneratorNumbers" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="249*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tittle_txt" HorizontalAlignment="Left" Margin="123,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="154" Grid.ColumnSpan="2" FontSize="18"><Run Text="Take y"/><Run Language="pl-pl" Text="o"/><Run Text="ur random numbers"/></TextBlock>
        <Button x:Name="draw_button" Click="draw_button_Click" Content="Get it!" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="31,0,0,0" />
        <TextBlock x:Name="txt" HorizontalAlignment="Left" Margin="10,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="178" Width="380" Text="" Grid.ColumnSpan="2" FontSize="18"/>
    </Grid>
</Window>
